{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}